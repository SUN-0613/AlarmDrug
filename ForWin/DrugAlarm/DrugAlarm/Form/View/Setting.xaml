                </ComboBox.ItemTemplate>
            </ComboBox>
            <ComboBox Grid.Row="7" Grid.RowSpan="1" Grid.Column="5" Grid.ColumnSpan="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Padding="0" >
                <ComboBox.ItemTemplate>
                    <DataTemplate>
